{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "attach",
			"name": "attach.tests",
			"port": 5200,
			"restart": true,
			"timeout": 10000
		},
		{
			"type": "node",
			"request": "attach",
			"name": "attach.tests.ct",
			"address": "3.tcp.ngrok.io",
			"port": 25981,
			"restart": true,
			"timeout": 10000,
			"localRoot": "${workspaceFolder}/packagets/spruce-cli",
			"remoteRoot": "/media/ramdisk/spruce-cli-workspace/packages/spruce-cli"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "debug.cli",
			"protocol": "inspector",
			"runtimeExecutable": "yarn",
			"runtimeArgs": [
				"run",
				"local"
			],
			"console": "integratedTerminal",
			"port": 5200,
			"cwd": "${workspaceFolder}/packages/spruce-cli",
			"localRoot": "${workspaceRoot}/packages/spruce-cli",
			"remoteRoot": "${workspaceRoot}/packages/spruce-cli",
			"env": {
				"COMMANDS": "${input:commands}"
			}
		},
		{
			"type": "node",
			"request": "launch",
			"name": "debug.cache",
			"protocol": "inspector",
			"runtimeExecutable": "yarn",
			"runtimeArgs": [
				"run",
				"cache.tests"
			],
			"console": "integratedTerminal",
			"port": 5200,
			"cwd": "${workspaceFolder}/packages/spruce-cli",
			"localRoot": "${workspaceRoot}/packages/spruce-cli",
			"remoteRoot": "${workspaceRoot}/packages/spruce-cli",
		},
		{
			"type": "node",
			"request": "launch",
			"name": "test.file",
			"runtimeExecutable": "${env:NVM_BIN}/node",
			"runtimeArgs": [
				"--inspect-brk",
				"--trace-warnings",
				"${workspaceFolder}/node_modules/.bin/jest",
				"${fileBasenameNoExtension}",
				"--detectOpenHandles"
			],
			"port": 9229,
			"cwd": "${workspaceFolder}/packages/spruce-cli",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "test.all",
			"runtimeExecutable": "${env:NVM_BIN}/node",
			"runtimeArgs": [
				"--inspect-brk",
				"--trace-warnings",
				"${workspaceFolder}/node_modules/.bin/jest"
			],
			"port": 9229,
			"cwd": "${workspaceFolder}/packages/spruce-cli",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "test.all.detectOpenHandles",
			"runtimeExecutable": "${env:NVM_BIN}/node",
			"runtimeArgs": [
				"--inspect-brk",
				"--trace-warnings",
				"${workspaceFolder}/node_modules/.bin/jest",
				"--detectOpenHandles"
			],
			"port": 9229,
			"cwd": "${workspaceFolder}/packages/spruce-cli",
			"console": "integratedTerminal",
			"internalConsoleOptions": "neverOpen"
		}
	],
	"inputs": [
		{
			"id": "commands",
			"type": "promptString",
			"description": "ðŸŒ²ðŸ¤– Command (user.login) + args"
		}
	]
}