{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "cli:attach",
      "port": 5200,
      "restart": true,
      "timeout": 10000
    },
    {
      "type": "node",
      "request": "launch",
      "name": "cli:debug",
      "protocol": "inspector",
      "runtimeExecutable": "yarn",
      "runtimeArgs": ["run", "local"],
      "console": "integratedTerminal",
      "port": 5200,
      "cwd": "${workspaceFolder}/packages/spruce-cli",
      "localRoot": "${workspaceRoot}/packages/spruce-cli",
      "remoteRoot": "${workspaceRoot}/packages/spruce-cli",
      "env": {
        "COMMANDS": "${input:commands}"
      }
    }
  ],
  "inputs": [
    {
      "id": "commands",
      "type": "promptString",
      "description": "ðŸŒ²ðŸ¤– Command (user:login) + args"
    }
  ]
}
