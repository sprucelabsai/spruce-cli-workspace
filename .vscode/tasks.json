{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "problem.watcher",
			"command": "yarn",
			"group": "build",
			"args": [
				"watch.tsc",
				"--noEmit",
				"--project",
				"tsconfig.json"
			],
			"runOptions": {
				"runOn": "folderOpen"
			},
			"options": {
				"cwd": "${workspaceFolder}/packages/spruce-cli"
			},
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"focus": false
			},
			"problemMatcher": {
				"base": "$tsc-watch",
				"applyTo": "allDocuments",
				"fileLocation": [
					"relative",
					"${workspaceFolder}/packages/spruce-cli"
				]
			}
		},
		{
			"type": "npm",
			"script": "watch.build.dev",
			"group": "build",
			"label": "watch.build.dev",
			"isBackground": true,
			"presentation": {
				"reveal": "silent",
				"panel": "dedicated",
				"clear": true
			},
			"runOptions": {
				"runOn": "folderOpen"
			},
		},
		{
			"type": "npm",
			"script": "sync.ct",
			"group": "build",
			"problemMatcher": [],
			"label": "sync.ct",
			"runOptions": {
				"runOn": "folderOpen"
			},
			"promptOnClose": false,
			"presentation": {
				"panel": "dedicated",
				"focus": false,
				"reveal": "silent"
			}
		},
		{
			"label": "test.reporter",
			"command": "spruce",
			"args": [
				"test",
				"--shouldHoldAtStart",
				"true",
				"--watchMode",
				"smart"
			],
			"options": {
				"cwd": "${workspaceFolder}/packages/spruce-cli"
			},
			"promptOnClose": false,
			"group": "test",
			"runOptions": {
				"runOn": "folderOpen"
			},
			"presentation": {
				"panel": "shared",
				"focus": true
			}
		},
		{
			"label": "test.file",
			"command": "spruce",
			"args": [
				"test",
				"--inspect",
				"5200",
				"--pattern",
				"${fileBasenameNoExtension}",
				"--watchMode",
				"standard"
			],
			"options": {
				"cwd": "${workspaceFolder}/packages/spruce-cli"
			},
			"promptOnClose": false,
			"group": "test",
			"presentation": {
				"reveal": "always",
				"panel": "shared"
			}
		},
		{
			"label": "spruce",
			"type": "shell",
			"command": "spruce ${input:spruceCommand}",
			"problemMatcher": [],
			"options": {
				"cwd": "${workspaceFolder}/packages/spruce-cli"
			},
			"presentation": {
				"reveal": "always",
				"focus": true,
				"panel": "new",
				"clear": false
			}
		},
		{
			"label": "shell",
			"type": "shell",
			"command": "${input:command} ${input:optionsCommand}",
			"problemMatcher": [],
			"presentation": {
				"reveal": "always",
				"focus": true,
				"panel": "new",
				"clear": false
			}
		}
	],
	"inputs": [
		{
			"id": "spruceCommand",
			"description": "spruce command",
			"default": "create.test",
			"type": "promptString"
		},
		{
			"id": "command",
			"description": "command",
			"default": "yarn",
			"type": "promptString"
		},
		{
			"id": "optionsCommand",
			"description": "optionsCommand",
			"default": "add",
			"type": "promptString"
		}
	]
}